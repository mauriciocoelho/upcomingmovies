<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_movie_detail_poster"
            android:layout_width="135dp"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/activity_movie_detail_original_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/activity_movie_detail_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Release Date" />

            <TextView
                android:id="@+id/activity_movie_detail_original_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="EN" />

            <TextView
                android:id="@+id/activity_movie_detail_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="120" />

            <TextView
                android:id="@+id/activity_movie_detail_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="42sp"
                tools:text="4.2" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>